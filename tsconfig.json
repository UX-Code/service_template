{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "types": [
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6"
    ],
    "allowUnreachableCode": true,
    "rootDir": "./src",
    "sourceMap": false,
    "outDir": "./dist",
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}